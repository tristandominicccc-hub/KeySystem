-- Button hover effects
local function createButtonEffects(button, normalColor, hoverColor)
    button.MouseEnter:Connect(function()
        local tween = TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = hoverColor})
        tween:Play()
    end)
    
    button.MouseLeave:Connect(function()
        local tween = TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = normalColor})
        tween:Play()
    end)
    
    button.MouseButton1Down:Connect(function()
        local tween = TweenService:Create(button, TweenInfo.new(0.1), {BackgroundColor3 = normalColor})
        tween:Play()
    end)
    
    button.MouseButton1Up:Connect(function()
        local tween = TweenService:Create(button, TweenInfo.new(0.1), {BackgroundColor3 = hoverColor})
        tween:Play()
    end)
end

-- Apply effects to buttons
createButtonEffects(VerifyBtn, Color3.fromRGB(0, 180, 0), Color3.fromRGB(0, 200, 0))
createButtonEffects(DiscordBtn, Color3.fromRGB(88, 101, 242), Color3.fromRGB(114, 137, 218))

-- FUNCTION: Copy Discord Link
DiscordBtn.MouseButton1Click:Connect(function()
    setclipboard(DiscordLink)
    local originalText = DiscordBtn.Text
    DiscordBtn.Text = "‚úÖ LINK COPIED!"
    
    local tween = TweenService:Create(DiscordBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(0, 180, 0)})
    tween:Play()
    
    wait(1.5)
    
    DiscordBtn.Text = originalText
    local revertTween = TweenService:Create(DiscordBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(88, 101, 242)})
    revertTween:Play()
end)

-- FUNCTION: VERIFY KEY
VerifyBtn.MouseButton1Click:Connect(function()
    if KeyBox.Text == RealKey then
        VerifyBtn.Text = "‚úÖ ACCESS GRANTED!"
        local tween = TweenService:Create(VerifyBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(0, 150, 0)})
        tween:Play()
        
        wait(1)

        -- UNLOCK SCRIPT (PUT YOUR SCRIPT HERE)
        loadstring(game:HttpGet("https://raw.githubusercontent.com/tristandominicccc-hub/Fishies/refs/heads/main/Fishies"))()

        ScreenGui:Destroy() -- remove GUI
    else
        VerifyBtn.Text = "‚ùå INVALID KEY!"
        local tween = TweenService:Create(VerifyBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(180, 0, 0)})
        tween:Play()
        
        wait(1.5)
        
        VerifyBtn.Text = "‚úÖ VERIFY KEY"
        local revertTween = TweenService:Create(VerifyBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(0, 180, 0)})
        revertTween:Play()
    end
end)

-- KeyBox focus effects
KeyBox.Focused:Connect(function()
    local tween = TweenService:Create(KeyBox, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(55, 55, 55)})
    tween:Play()
end)

KeyBox.FocusLost:Connect(function()
    local tween = TweenService:Create(KeyBox, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(45, 45, 45)})
    tween:Play()
end)

local function createButtonEffects(button, normalColor, hoverColor)
    button.MouseEnter:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = hoverColor}):Play()
    end)
    button.MouseLeave:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = normalColor}):Play()
    end)
    button.MouseButton1Down:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.1), {BackgroundColor3 = normalColor}):Play()
    end)
    button.MouseButton1Up:Connect(function()
        TweenService:Create(button, TweenInfo.new(0.1), {BackgroundColor3 = hoverColor}):Play()
    end)
end

createButtonEffects(VerifyBtn, Color3.fromRGB(0, 180, 0), Color3.fromRGB(0, 200, 0))
createButtonEffects(DiscordBtn, Color3.fromRGB(88, 101, 242), Color3.fromRGB(114, 137, 218))

DiscordBtn.MouseButton1Click:Connect(function()
    setclipboard(DiscordLink)
    local originalText = DiscordBtn.Text
    DiscordBtn.Text = "‚úÖ LINK COPIED!"
    TweenService:Create(DiscordBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(0, 180, 0)}):Play()
    wait(1.5)
    DiscordBtn.Text = originalText
    TweenService:Create(DiscordBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(88, 101, 242)}):Play()
end)

VerifyBtn.MouseButton1Click:Connect(function()
    if KeyBox.Text == RealKey then
        VerifyBtn.Text = "‚úÖ ACCESS GRANTED!"
        TweenService:Create(VerifyBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(0, 150, 0)}):Play()
        wait(1)
        loadstring(game:HttpGet("https://raw.githubusercontent.com/tristandominicccc-hub/duminik.gg/refs/heads/main/TameAndCatch"))()
        ScreenGui:Destroy()
    else
        VerifyBtn.Text = "‚ùå INVALID KEY!"
        TweenService:Create(VerifyBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(180, 0, 0)}):Play()
        wait(1.5)
        VerifyBtn.Text = "‚úÖ VERIFY KEY"
        TweenService:Create(VerifyBtn, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(0, 180, 0)}):Play()
    end
end)

KeyBox.Focused:Connect(function()
    TweenService:Create(KeyBox, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(55, 55, 55)}):Play()
end)

KeyBox.FocusLost:Connect(function()
    TweenService:Create(KeyBox, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(45, 45, 45)}):Play()
end)
